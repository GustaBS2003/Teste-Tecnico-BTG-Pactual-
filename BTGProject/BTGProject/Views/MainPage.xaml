<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:BTGProject.Converters"
             x:Class="BTGProject.Views.MainPage"
             Title="Client Management">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:NullToBoolConverter x:Key="NullToBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Clients" FontSize="24" HorizontalOptions="Center" />

        <CollectionView x:Name="ClientsView"
                        ItemsSource="{Binding Clients}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedClient, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding Name}" Grid.Column="0" />
                        <Label Text="{Binding Lastname}" Grid.Column="1" />
                        <Label Text="{Binding Age}" Grid.Column="2" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Add" Command="{Binding AddClientCommand}" />
            <Button Text="Edit" Command="{Binding EditClientCommand}" IsEnabled="{Binding SelectedClient, Converter={StaticResource NullToBoolConverter}}" />
            <Button Text="Delete" Command="{Binding DeleteClientCommand}" IsEnabled="{Binding SelectedClient, Converter={StaticResource NullToBoolConverter}}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>